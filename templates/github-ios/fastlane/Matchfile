# Matchfile for Fastlane Match (Code Signing)
# Template from github-starterpack

# Git repository containing certificates and profiles
git_url(ENV["MATCH_GIT_URL"] || "git@github.com:{{GITHUB_ORG}}/certificates.git")

# Storage mode: git, google_cloud, s3
storage_mode("git")

# Default type for match
type("appstore")

# App Identifier(s)
app_identifier(["{{BUNDLE_IDENTIFIER}}"])

# Apple Developer Team ID
team_id("{{TEAM_ID}}")

# Username for Apple Developer Portal (optional with API Key)
# username("your@email.com")

# Platform
platform("ios")

# Read only in CI (don't create new certs/profiles)
readonly(true) if ENV["CI"]

# For more information about Match, see:
# https://docs.fastlane.tools/actions/match/
